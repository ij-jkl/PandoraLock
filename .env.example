# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=your_database_name
MYSQL_USER=your_user
MYSQL_PASSWORD=your_password
MYSQL_CONNECTION_STRING=server=localhost;port=3306;database=your_database_name;uid=your_user;pwd=your_password
HOST_PORT=3306

# JWT Configuration
JWT_SECRET=your_secret_key_at_least_64_characters_long_for_security
JWT_ISSUER=PandoraLock
JWT_AUDIENCE=PandoraLockUsers
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=20

# File Storage Configuration
FILE_STORAGE_PATH=./FileStorage
MAX_FILE_SIZE_MB=10
FILE_ENCRYPTION_KEY=your_64_character_hex_string_32_bytes_example_0123456789ABCDEF0123456789ABCDEF

# Email Configuration (for password reset functionality)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password
EMAIL_FROM_EMAIL=noreply@pandoralock.com
EMAIL_FROM_NAME=PandoraLock
EMAIL_ENABLE_SSL=true

# Redis Configuration
REDIS_PORT=6379
REDIS_CONNECTION_STRING=localhost:6379
REDIS_CACHE_EXPIRATION_MINUTES=60
